@model Pms.Presentation.Mvc.Models.PersonModel

@{
    ViewBag.Title = "Performance Management System - Create";    
}

<h2>Create a new user account</h2>
<div class="well">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
<table class="form" border="0" cellpadding="0" >
    <tbody>
        <tr>
            <th colspan="2" class="header">Main information</th>            
        </tr>
        <tr class="spacer"><td colspan="2">&nbsp;</td></tr>
        <tr>
            <th>@Html.LabelFor(model => model.Email):</th>
            <td class="formbody">
                <div class="editor-field">
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-red" })
                </div>
            </td>
        </tr>
        <tr class="spacer"><td colspan="2">&nbsp;</td></tr>
        <tr>
            <th>@Html.LabelFor(model => model.FirstName):</th>
            <td class="formbody">
                <div class="editor-field">
                    @Html.EditorFor(model => model.FirstName)
                    @Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "text-red" })
                </div>
            </td>
        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.LastName):</th>
            <td class="formbody">
                <div class="editor-field">
                    @Html.EditorFor(model => model.LastName)
                    @Html.ValidationMessageFor(model => model.LastName, null, new { @class = "text-red" })
                </div>
            </td>
        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.MiddleName):</th>
            <td class="formbody">
                <div class="editor-field">
                    @Html.EditorFor(model => model.MiddleName)
                    @Html.ValidationMessageFor(model => model.MiddleName, null, new { @class = "text-red" })
                </div>
            </td>
        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.Birthday):</th>
            <td class="formbody">
                <div class="editor-field">
                    @Html.EditorFor(model => model.Birthday)
                    @Html.ValidationMessageFor(model => model.Birthday, null, new { @class = "text-red" })
                </div>
            </td>
        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.Age):</th>
            <td class="formbody">
                <div class="editor-field">
                    @Html.EditorFor(model => model.Age)
                    @Html.ValidationMessageFor(model => model.Age)
                </div>
            </td>
        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.Sex):</th>
            <td class="formbody">
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.Sex, new SelectList(Model.SexList, "Id", "Name", Model.Sex))
                    @Html.ValidationMessageFor(model => model.Sex)
                </div>
            </td>
        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.CivilStatus):</th>
            <td class="formbody">
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.CivilStatus, new SelectList(Model.CivilStatusList, "Id", "Name", Model.CivilStatus))
                    @Html.ValidationMessageFor(model => model.CivilStatus)
                </div>
            </td>
        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.CountryId):</th>
            <td class="formbody">
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.CountryId, new SelectList(Model.CountryList, "Id", "Name", Model.CountryId))
                    @Html.ValidationMessageFor(model => model.CountryId)
                </div>
            </td>
        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.SocialSecurityNumber):</th>
            <td class="formbody">
                <div class="editor-field">
                    @Html.EditorFor(model => model.SocialSecurityNumber)
                    @Html.ValidationMessageFor(model => model.SocialSecurityNumber)
                </div>
            </td>
        </tr>
        <tr class="spacer"><td colspan="2">&nbsp;</td></tr>
        <tr class="spacer"><td colspan="2">&nbsp;</td></tr>
        <tr>
            <th colspan="2" class="header">Other information</th>            
        </tr>
        <tr class="spacer"><td colspan="2">&nbsp;</td></tr>
        <tr>
            <th>@Html.LabelFor(model => model.PersonType):</th>
            <td class="formbody">
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.PersonType, new SelectList(Model.EmployeeTypeList, "Id", "Name", Model.PersonType))
                    @Html.ValidationMessageFor(model => model.PersonType)
                </div>
            </td>
        </tr>
        <tr class="spacer"><td colspan="2">&nbsp;</td></tr>
        <tr class="spacer"><td colspan="2">&nbsp;</td></tr>
        <tr>
            <td colspan="2"><input type="submit" class="submit" value="@Resources.Pms.General_Create" style="width:70px" /></td>
        </tr>
        <tr class="spacer"><td colspan="2">&nbsp;</td></tr>
    </tbody>
</table>
}
</div>