<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/pms-site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>
<body>
    <div class="pms-ribbon">
            <div id="logindisplay">
                <div class="gradient">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
    </div>
    <div class="SPBorder"></div>

    <table width="100%">
        <tr>
            <td align="right">
                <ul>
                @foreach (KeyValuePair<string, string> language in Pms.Common.Helper.Utility.GetLanguages())
                {
                    if (System.Threading.Thread.CurrentThread.CurrentCulture.Name != language.Key)
                    {
                        <li style="display:inline">@Html.ActionLink(language.Value, ViewContext.RouteData.GetRequiredString("action"), ViewContext.RouteData.GetRequiredString("controller"), new { language = language.Key }, null)</li>
                    }
                }
                </ul>
            </td>
        </tr>
    </table>

    <!-- start of main content -->
    <div id="main-container">
        
        <div id="top-nav">
            <div class="cgi-logo" ></div>
            <ul id="menu">
                <li><a href="http://www.google.com">My Site</a></li> 
                <li><a href="http://www.yahoo.com">Tools</a></li> 
                <li><a href="http://www.fcebook.com">My Site</a></li>
            </ul>    

            <header>
                <div id="title">
                    <h1>PMS In Progress!!!</h1>
                </div>
            </header>
        </div>        

        <div class="main-page">
            <div id="left-nav" style="float:left;">
                <nav>
                    <ul class="left-nav-menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>                        
                        <li>@Html.ActionLink("Search a user", "Search", "UserManagement")</li>
                        <li>@Html.ActionLink("Create a user", "Create", "UserManagement")</li>
                    </ul>
                </nav>
            </div>
            <div id="center-nav">
                <section >               
                    @RenderSection("featured", required: false)
                    @RenderBody()
                </section>        
            </div>

            <div id="right-nav" >
                <div class="box">
                    <div class="gradient box-title">
                        Feauture
                    </div>
                    <div>
                        Put your content here.
                    </div>
                </div>
                <div class="box">
                    <div class="gradient box-title">Contact Us</div>
                    <p style="font-size: 14px;">For Contact and Support, Email us at test@testing.com</p>
                </div>
            </div>
        </div>        

    </div>
    <div id="footer" style="display: block;text-align: center;clear: both;">
            <footer>
               <p>All Rights Reserved 2013. CGI Project Management Site.</p>
            </footer>
     </div>
     <!-- end of main content -->  
    
</body>
</html>
