<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>CGI | Performance Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Url.Content("~/Content/Stylesheets/pms.branding.core.css")" rel="stylesheet" />
	<link href="@Url.Content("~/Content/Stylesheets/pms.branding.fonts.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Stylesheets/pms.branding.custom.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <!--[if lt IE 9]>
      <script src="@Url.Content("~/Scripts/core/pms.branding.html5shiv.js")"></script>
    <![endif]-->
	</head>
	<body>
        @Html.Partial("~/Views/Shared/Header/_PMS.Partial.GlobalHeader.cshtml")                
        <div class="container">
            <div class="span3 left-navigation">
                <ul class="nav nav-tabs nav-stacked left-navi">                
                    @Html.Partial("_LeftNavigationPartial")
                </ul>
            </div>
        </div>            
        <div class="container">
            <div class="row">                
                <div class="container main-content span10">
                    <div class="well">
                        @RenderSection("featured", required: false)
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        @Scripts.Render("~/bundles/jquery", "~/bundles/pms")
        @RenderSection("scripts", required: false)
	</body>
</html>
